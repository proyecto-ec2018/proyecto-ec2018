              img(src="/images/fen.jpg" class="img-circle hidden-xs" alt="Cinque Terre" style="width:150px; height: 150px")
              h1()="Datos generales"
            
          h3="Encargado:"  
          ul(class="list-unstyled" style="margin-left: 20px;font-size:20px;")
