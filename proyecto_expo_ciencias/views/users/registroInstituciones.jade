extends ../templates/default

block content_head
  link(rel="stylesheet" href="/stylesheets/registro-particular.css")

block content
  div(class="contenedor")
    div(class="container")
      div(class="row")
        div(class="col-md-4 col-md-offset-4")
          img(src="https://4.bp.blogspot.com/-UaPde7fEN0M/VV00gHw4xdI/AAAAAAAACIU/ubLA8GFc9c4/s1600/1%2Bperlita.jpg" class="img-circle registro-img" alt="Cinque Terre")

      h1(class="text-center")='Registro para instituciones'
      div(class="row")
        div(class="col-md-4 col-md-offset-4")="NOTA: Las instituciones registradas serán visibles una vez pasen el proceso de verificación"

      div(class="row")
        div(class="col-md-6 col-md-offset-3")
          div(class="panel panel-default")
            div(class="panel-heading text-center" style="background-color:#07c133; color:white;")="Formato de registro"
            div(class="panel-body")
              form(action="" method="")
                div(class="form-group")
                  label(for="nombre")="Nombre de la institución: "
                  input(type="text" name="nombre" id="nombre" placeholder="Nombre" class="form-control")
                div(class="form-group")
                  label(for="nombre_responsable")="Nombre del responsable: "
                  input(type="text" name="nombre_responsable" id="nombre_responsable" placeholder="Nombre del responsable" class="form-control")
                div(class="form-group")
                  label(for="apellido_responsable")="Nombre del responsable: "
                  input(type="text" name="apellido_responsable" id="apellido_responsable" placeholder="Apellido del responsable" class="form-control")
                div(class="form-group")
                  label(for="email")="Correo electrónico: "
                  input(type="email" name="email" id="email" placeholder="Correo electrónico" class="form-control")
                div(class="form-group")
                  label(for="institucion")="Tipo de institución"
                  select(class="form-control" id="institucion")
                    option="Empresa privada"
                    option="Universidad"
                    option="Bachillerato"
                div(class="form-group")
                  label(for="pass")="Contraseña: "
                  input(type="password" name="pass" id="pass" placeholder="Contraseña" class="form-control")
                div(class="form-group")
                  label(for="passVal")="Confirmar contraseña: "
                  input(type="password" name="passVal" id="passVal" placeholder="Contraseña" class="form-control")
                button(type="submit" class="btn btn-success")="Registrarme"